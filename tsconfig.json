
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": [
    "index.tsx", 
    "App.tsx", 
    "types.ts", 
    "constants.tsx", 
    "translations.ts", 
    "Logo.tsx", 
    "services/**/*.ts", 
    "components/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "shared/**/*.ts",
    "api/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}